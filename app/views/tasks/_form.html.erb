<%= form_for(@task) do |f| %>
  <% if @task.errors.full_messages.any? %>
    <% @task.errors.full_messages.each do |msg| %>
      <p class = "text-danger"><%= msg  %></p>
      <% end %>
    <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed, {}, true, false  %>
  <%= f.submit %>
<% end %>